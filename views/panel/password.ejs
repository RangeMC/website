<%- include('../_header.ejs', { title: `Смена пароля`, userLogin: userLogin }) %>
<div class="text-center">
    <span class="white-color">
        <div id="head" class="parallax">
            <h1>RangeMC Project</h1>
            <h3>Комплекс серверов Minecraft</h3>
        </div>
        <br><form action="/panel/password" method="POST"><div style="background-color: black;" class="w-50 mx-auto window breakpoint-768-i">
            <div class="text-center"><h4 style="color: white;">Смена пароля</h4></div>
            <%- (error) ? `<div id="error-login"><br><p style="background-color: red;" class="btn" onclick="document.getElementById('error-login').innerHTML = '';">${error}</p><br></div>` : "" %>
            <div class="input-block">
                <label style="color: white;" for="form-1">Старый пароль аккаунта</label>
                <input type="password" placeholder="Введите текущий пароль для входа в нашем лаунчере" name="passold" id="form-1" required>
                <div style="color: white;" class="input-helper">Данное поле является обязательным</div>
            </div>

            <div class="input-block">
                <label style="color: white;" for="form-2">Новый пароль аккаунта</label>
                <input type="password" placeholder="Введите новый пароль для входа в нашем лаунчере" name="passnew" id="form-2" required>
                <div style="color: white;" class="input-helper">Данное поле является обязательным</div>
            </div>

            <div class="pt-20 text-center">
                <button type="submit" style="background-color: cadetblue;" class="btn">Сменить</button> <a style="background-color: red;" href="/panel" class="btn">Назад</a>
            </div>
        </div></form>
    </span>
    <section id="banner" class="parallax"></section>
</div>
<%- include('../_footer.ejs') %>